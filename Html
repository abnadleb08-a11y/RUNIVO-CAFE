                { name: "أركيلة نخلة", price: "9000", image: "argila3", flavors: "" },
                { name: "أركيلة ليدي", price: "7500", image: "argila4", flavors: "" }
            ]
        };

        // Load Menu
        function loadMenu(category = 'all') {
            const container = document.getElementById('menuContainer');
            container.innerHTML = '';
            
            if (category === 'all') {
                for (const cat in menuData) {
                    menuData[cat].forEach(item => {
                        container.innerHTML += createMenuItem(item, cat);
                    });
                }
            } else if (menuData[category]) {
                menuData[category].forEach(item => {
                    container.innerHTML += createMenuItem(item, category);
                });
            }
        }

        function createMenuItem(item, category) {
            const categoryIcons = {
                'cold': 'fas fa-glass-whiskey',
                'hot': 'fas fa-mug-hot',
                'desserts': 'fas fa-birthday-cake',
                'milkshake': 'fas fa-blender',
                'cocktails': 'fas fa-cocktail',
                'argila': 'fas fa-smoking'
            };
            
            // Different background colors for different categories
            const bgColors = {
                'cold': '#e3f2fd',
                'hot': '#ffebee',
                'desserts': '#fff3e0',
                'milkshake': '#f3e5f5',
                'cocktails': '#e8f5e9',
                'argila': '#fce4ec'
            };
            
            return `
                <div class="menu-item" data-category="${category}">
                    <div class="item-image" style="background-color: ${bgColors[category] || '#f5f5f5'};">
                        <div style="display: flex; align-items: center; justify-content: center; height: 100%; font-size: 3rem; color: ${category === 'cold' ? '#2196f3' : category === 'hot' ? '#f44336' : category === 'desserts' ? '#ff9800' : '#9c27b0'}">
                            <i class="${categoryIcons[category]}"></i>
                        </div>
                    </div>
                    <div class="item-content">
                        <div class="item-header">
                            <h3 class="item-name">${item.name}</h3>
                            <span class="item-price">${item.price} ل.س</span>
                        </div>
                        ${item.flavors ? `<div class="item-flavors">${item.flavors}</div>` : ''}
                    </div>
                </div>
            `;
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadMenu();
            
            // Category filtering
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.category-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    loadMenu(this.dataset.category);
                });
            });
            
            // Mobile menu
            document.getElementById('mobileMenuBtn').addEventListener('click', function() {
                document.getElementById('mainNav').classList.toggle('active');
            });
            
            // Reservation form
            document.getElementById('reservationForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const reservation = {
                    name: document.getElementById('name').value,
                    phone: document.getElementById('phone').value,
                    date: document.getElementById('date').value,
                    time: document.getElementById('time').value,
                    branch: document.getElementById('branch').value,
                    section: document.getElementById('section').value,
                    guests: document.getElementById('guests').value
                };
                
                // Save to localStorage
                let reservations = JSON.parse(localStorage.getItem('runivo_reservations') || '[]');
                reservations.push({
                    ...reservation,
                    id: Date.now(),
                    status: 'pending'
                });
                localStorage.setItem('runivo_reservations', JSON.stringify(reservations));
                
                alert('تم تأكيد حجزك بنجاح! سنتصل بك قريباً للتأكيد النهائي.\nرقم الحجز: ' + Date.now());
                this.reset();
                
                // Set min date to today
                const today = new Date().toISOString().split('T')[0];
                document.getElementById('date').min = today;
            });
            
            // Set min date to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('date').min = today;
            
            // Smooth scroll for navigation links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                        
                        // Close mobile menu if open
                        document.getElementById('mainNav').classList.remove('active');
                    }
                });
            });
        });
    </script>
</body>
</html>
